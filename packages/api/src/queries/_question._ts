/**
 * Apollo Query: Question
 *
 */

import { gql } from 'apollo-server-core';
import { LOCALE, REMARK } from './common';

const QUESTION_FIELDS = gql`
  ${LOCALE}
  ${REMARK}
  fragment QuestionFields on Question {
    _id
    abbr
    name {
      ...LocaleFields
    }

    remarks {
      ...RemarkFields
    }
    createdAt
    updatedAt
    deletedAt
  }
`;

export const GET_QUESTION = gql`
  ${QUESTION_FIELDS}
  query GetQuestion($id: ID!) {
    question(id: $id) {
      ...QuestionFields
    }
  }
`;

