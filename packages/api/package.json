{
  "name": "@argonne/api",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "tsc --build --verbose && ts-node build",
    "dev": "nodemon src/server.ts",
    "database:prod": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true ts-node src/database/init",
    "database:dev:TMP": "cross-env TS_NODE_TRANSPILE_ONLY=true ts-node --esm src/database/init",
    "database:dev:quick": "cross-env TS_NODE_TRANSPILE_ONLY=true ts-node src/database/init",
    "database:dev": "ts-node src/database/init",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src/**/*.{js,ts,tsx} --fix",
    "prepack": "yarn build",
    "prettier:check": "prettier --check src",
    "prettier:fix": "prettier --write src",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:ci": "jest  src --detectOpenHandles --forceExit",
    "web-push-gen-key": "web-push generate-vapid-keys"
  },
  "dependencies": {
    "@argonne/common": "workspace:^",
    "@socket.io/redis-adapter": "8.1.0",
    "apollo-server-express": "^3.11.1",
    "axios": "^1.3.2",
    "bcryptjs": "^2.4.3",
    "chalk": "4.1.2",
    "chinese_convert": "^1.0.8",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "deepmerge": "^4.3.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "google-auth-library": "^8.7.0",
    "graphql": "^16.6.0",
    "helmet": "^6.0.1",
    "http": "^0.0.1-security",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.0",
    "minio": "^7.0.32",
    "mobile-detect": "^1.4.5",
    "mongoose": "^6.9.1",
    "ms": "^2.1.3",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.1",
    "sharp": "^0.31.3",
    "socket.io": "4.6.0",
    "socket.io-client": "^4.6.0",
    "supertest": "^6.3.3",
    "twilio": "^4.7.1",
    "web-push": "^3.5.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@jest/globals": "^29.4.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/deepmerge": "^2.2.0",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/minio": "^7.0.15",
    "@types/morgan": "^1.9.4",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.13.0",
    "@types/node-schedule": "^2.1.0",
    "@types/nodemailer": "^6.4.7",
    "@types/sharp": "^0.31.1",
    "@types/supertest": "^2.0.12",
    "@types/web-push": "^3.3.2",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jsdoc": "^39.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.4.2",
    "jest-extended": "^3.2.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "nodemonConfig": {
    "verbose": true,
    "delay": "500",
    "ignore": [
      "dist",
      "./src/database",
      "**/*.test.ts",
      "**/*.md"
    ],
    "execMap": {
      "ts": "node -r ts-node/register"
    },
    "env": {
      "NODE_ENV": "development"
    }
  }
}
