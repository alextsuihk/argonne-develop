{
  "name": "@argonne/api",
  "version": "1.0.0-alpha",
  "scripts": {
    "build": "tsc --build --verbose && ts-node build",
    "dev": "nodemon src/server.ts",
    "database:prod": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true ts-node src/database/init",
    "database:dev:TMP": "cross-env TS_NODE_TRANSPILE_ONLY=true ts-node --esm src/database/init",
    "database:dev:quick": "cross-env TS_NODE_TRANSPILE_ONLY=true ts-node src/database/init",
    "database:dev": "ts-node src/database/init",
    "database:dev:all": "ts-node src/database/init --minio --drop --seed --fake --jest --demo --system-tutors",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src/**/*.{js,ts,tsx} --fix",
    "prepack": "yarn build",
    "prettier:check": "prettier --check src",
    "prettier:fix": "prettier --write src",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:ci": "jest  src --detectOpenHandles --forceExit",
    "web-push-gen-key": "web-push generate-vapid-keys"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@argonne/common": "workspace:^",
    "@socket.io/redis-adapter": "8.2.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "chalk": "4.1.2",
    "chinese_convert": "^1.0.8",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "google-auth-library": "^9.4.1",
    "graphql": "^16.8.1",
    "helmet": "^7.1.0",
    "http": "^0.0.1-security",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mime": "3.0.0",
    "minio": "^7.1.3",
    "mobile-detect": "^1.4.5",
    "mongoose": "^8.0.3",
    "ms": "^2.1.3",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.7",
    "sharp": "^0.33.1",
    "socket.io": "4.7.2",
    "socket.io-adapter": "^2.5.2",
    "socket.io-client": "^4.7.2",
    "supertest": "^6.3.3",
    "twilio": "^4.20.0",
    "web-push": "^3.6.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@jest/globals": "^29.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/deepmerge": "^2.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/minio": "^7.1.1",
    "@types/morgan": "^1.9.9",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.10.5",
    "@types/node-schedule": "^2.1.5",
    "@types/nodemailer": "^6.4.14",
    "@types/sharp": "^0.32.0",
    "@types/supertest": "^2.0.16",
    "@types/web-push": "^3.6.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^46.9.1",
    "eslint-plugin-prettier": "^5.0.1",
    "graphql-tag": "^2.12.6",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "nodemonConfig": {
    "verbose": true,
    "delay": "500",
    "ignore": [
      "dist",
      "./src/database",
      "**/*.test.ts",
      "**/*.md"
    ],
    "execMap": {
      "ts": "node -r ts-node/register"
    },
    "env": {
      "NODE_ENV": "development"
    }
  }
}
